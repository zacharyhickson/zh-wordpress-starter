{% extends "tease.twig" %}
{% block content %}
    <h2 class="h2"><a href="{{ post.link }}">{{ post.title }}</a></h2>
    <p class="blog-author">
        Posted on {{ post.post_date|date }}<span> | </span><span>Written by</span><a
                href="{{ post.author.path }}"> {{ post.author.name }} </a>
    </p>

    <p>{{ post.get_preview(25) }}</p>


    {% if post.thumbnail.src %}
        <img src="{{ post.thumbnail.src }}"/>
    {% endif %}
{% endblock %}