{% extends "base.twig" %}

{% block content %}

	<div class="small-12 large-8 columns">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="article-h1">{{post.title}}</h1>

				<p class="blog-author">
					Posted on {{ post.post_date|date}} <br/> <span>Written by</span><a href="{{post.author.path}}"> {{ post.author.name }} </a>
                </p>

				<div class="article-body">
					{{post.content}}
				</div>
			</section>

			<section class="comments">
				<div class="respond">
					<h3 class="h2">Comments</h3>
					{{ comment_form }}
				</div>
				<div class="responses">
					{% for cmt in post.get_comments() %}
						{% include "comment.twig" with {comment:cmt} %}
					{% endfor %}
				</div>

			</section>

		</article>
	</div> <!-- /content-wrapper -->
    {% if sidebar %}
        <aside class="large-4 columns my-sidebar">
            {% include ['sidebar.twig'] %}
        </aside>
    {% endif %}

{% endblock %}
